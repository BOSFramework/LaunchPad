@model BOS.LaunchPad.Features.Profile.ProfileViewModel

<div class="container BOS2_dashboard">
    <div class="row">
        <br />
        <div class="col-md-6">
            <div class="Edit_Header">
                <h1>Edit Profile</h1>
            </div>
            <h3>Account Details</h3>
            <hr />
            <div class="BOSEdit_User">
                <form asp-controller="Profile" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="@Model.User.Id" />
                    <input type="hidden" asp-for="@Model.User.Email" />
                    <input type="hidden" asp-for="@Model.User.Username" />
                    <div class="form-group">
                        <label asp-for="@Model.NewUsername"></label>
                        <input asp-for="@Model.NewUsername" class="form-control" />
                        <span asp-validation-for="@Model.NewUsername" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.NewEmail"></label>
                        <input asp-for="@Model.NewEmail" class="form-control" />
                        <span asp-validation-for="@Model.NewEmail" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Update</button>
                    <a href="/Profile/ChangePassword">Change Password</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}